{
  "corpus_name": "ancient_greek_poetic_corpus",
  "citation": "Ancient Greek Poetic Corpus",
  "input_format": "json",
  "debug": false,
  "max_context_expand": 10,
  "max_distance_filter": 200000,
  "max_docs_retrieve": 9999,
  "max_words_in_sentence": 40,
  "query_timeout": 60,
  "year_sort_enabled": false,
  "viewable_meta": [
    "title",
    "author"
  ],
  "sentence_meta": [
    "title",
    "author",
    "metre",
    "prosody"
  ],
  "search_meta": {
    "columns": [
      [
        {"type": "input_text", "name": "author", "placeholder": "Author"},
        {"type": "input_text", "name": "title", "placeholder": "Title"}
      ]
    ],
    "stat_options": [
      "author",
      "title",
      "metre"
    ]
  },
  "fulltext_view_enabled": true,
  "use_nonpersistent_fulltext_id": true,
  "languages": ["greek"],
  "interface_languages": [
    "en"
  ],
  "lang_props": { "gr_fields_order": ["pos"]}
}
